" $Id: vimrc,v 1.1 2011-01-18 19:20:17-08 dmfrank - $

highlight Directory none
highlight ErrorMsg term=reverse
highlight IncSearch none
highlight LineNr none
highlight LineNr none
highlight ModeMsg term=bold
highlight MoreMsg term=bold
highlight NonText none
highlight Normal none
highlight Question none
highlight Search none
highlight SignColumn none
highlight SpecialKey none
highlight StatusLine none
highlight StatusLineNC none
highlight TabLine term=bold
highlight TabLineFill term=bold
highlight TabLineSel term=bold
highlight Title term=bold
highlight Visual term=reverse
highlight VisualNOS term=reverse
highlight WarningMsg term=reverse
highlight WildMenu none

set compatible
set nohlsearch
set numberwidth=8
set t_Co=0
set viminfo='0,n/dev/null

syntax off

map ;$ :.m$
map ;1 1G
map ;I :set noignorecase
map ;M :set noshowmatch
map ;N :set nonumber
map ;S {!}sort -f
map ;W :set wrapmargin=0
map ;a :set all
map ;f {!}fmt -65 -c
map ;g {!}fmt -50 -c
map ;i :set ignorecase
map ;m :set showmatch
map ;n :set number
map ;s {!}sort
map ;u {!}uniq
map ;w :set wrapmargin=1

"set autoindent
"set modeline
"set showmatch
set autoprint
set ignorecase
set noslowopen
set number
set report=1
set shell=/bin/sh
set showmode
set wrapmargin=1

